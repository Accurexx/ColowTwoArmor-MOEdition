<Defs>
 <ThingDef ParentName="HatMakeableBase">
		<defName>Ogam_Cloak</defName>
		<label>cloak</label>
		<description>A draped hood which covers the head and ears.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Headgear/Cloak/Cloak</texPath>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
    <generateCommonality>0.95</generateCommonality>

    <recipeMaker>
      <researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
    </recipeMaker>

		<costStuffCount>25</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>

		<statBases>
			<WorkToMake>2200</WorkToMake>
			<Mass>0.07</Mass>
			<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>

		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<layers>
				<li>EyeCover</li>
			</layers>
			<wornGraphicPath>Headgear/Cloak/Cloak</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>

		<thingClass>ThingColor.ApparelColored</thingClass>
		<colorGenerator IsNull="True"/>
		<modExtensions>
			<li Class="ThingColor.ThingExtension">
				<colorOneStuff>
					<li>Fabric</li>	
				</colorOneStuff>
				<colorTwoStuff>
					<li>Metallic</li>
				</colorTwoStuff>
			</li>
