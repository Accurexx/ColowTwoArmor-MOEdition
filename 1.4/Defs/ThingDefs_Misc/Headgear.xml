	</ThingDef>
  
	<ThingDef ParentName="ArmorHelmetMakeableBase" Name="DankPyon_SalletBase">
		<defName>Ogam_GuardianHelmet</defName>
		<label>guardian helmet</label>
		<description>A sleek three-part helmet consisting of a top, visor, and bevor to protect the head, face, respectively. Lightweight, and very protective, though it hinders eyesight significantly.</description>
		<graphicData>
			<texPath>Headgear/Guardian_plate_helmet/Guardian_plate_helmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
				<li>DankPyon_Anvil</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
		</recipeMaker>

		<statBases>
			<WorkToMake>20000</WorkToMake>
			<MaxHitPoints>250</MaxHitPoints>
			<Mass>3.5</Mass>
			<StuffEffectMultiplierArmor>1.00</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
			<PainShockThreshold>0.10</PainShockThreshold>
			<SocialImpact>0.15</SocialImpact>
		</equippedStatOffsets>

		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>70</costStuffCount> 
		
		<costList>
			<Cloth>15</Cloth>
		</costList>

		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Headgear/Guardian_plate_helmet/Guardian_plate_helmet</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>Overhead</li>
			</layers>
		</apparel>

		<thingClass>ThingColor.ApparelColored</thingClass>
		<colorGenerator IsNull="True"/>
		<modExtensions>
			<li Class="ThingColor.ThingExtension">
				<colorOneStuff>
					<li>Fabric</li>	
				</colorOneStuff>
				<colorTwoStuff>
